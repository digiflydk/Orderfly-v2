run = "npm run start"
entrypoint = "package.json"
modules = ["nodejs-20"]

[nix]
channel = "stable-23_11"
packages = ["nodejs-18_x", "nodePackages.npm"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35329
externalPort = 3001

[[ports]]
localPort = 42323
externalPort = 3000

[[ports]]
